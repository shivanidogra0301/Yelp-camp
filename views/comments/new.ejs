<% include ../partials/header %>
<h1 style="text-align: center;">Add New Comment to <%= campground.name%></h1>
<div class="container">
    <div class="row">
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/campground/<%=campground._id%>/comment" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="comment[text]" placeholder="text">
                        </div>
                        
                        
                        
                        
                                <button class="btn btn-large btn-primary btn-block">Submit</button>
                    
                       
                    </form>
                    <a href="/campground/<%=campground._id%>">Go Back</a>
            </div>
           
            
    </div>
   
       
</div>



